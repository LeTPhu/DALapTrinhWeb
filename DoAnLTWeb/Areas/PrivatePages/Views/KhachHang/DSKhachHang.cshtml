@using DoAnLTWeb.Models;
@{
    ViewBag.Title = "Danh sách khách hàng";
}
<!-- START PAGE CONTENT-->
<div class="page-heading">
    <h1 class="page-title">Danh sách khách hàng</h1>
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="@Url.Action("Dashboard","Dashboard")"><i class="la la-home font-20"></i></a>
        </li>
    </ol>
</div>
<div class="page-content fade-in-up">
    <div class="ibox">

        <div class="ibox-body">
            <table class="table table-bordered table-hover" id="example-table" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>Mã KH</th>
                        <th>Tên khách hàng</th>
                        <th>Số ĐT</th>
                        <th>Email</th>
                        <th style="width:20%">Địa chỉ </th>
                        <th>Số đơn hàng</th>
                        <th>Nhóm lệnh</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (KhachHang i in (new ShopOnlineEntities().KhachHangs.ToList<KhachHang>())){
                    <tr>
                        <td>@i.maKH</td>
                        <td>@i.tenKH</td>
                        <td>@i.soDT</td>
                        <td>@i.email</td>
                        <td>@i.diaChi</td>
                        <td>@TinhToan.tongSoDH(i.maKH) đơn hàng</td>
                        <td>
                            @using (Html.BeginForm("Delete", "KhachHang", FormMethod.Post))
                            {
                                <input type="hidden" name="makh" value=" @i.maKH" />
                                <button class=" btn-danger">Xóa</button>
                            }
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>

    <!-- END PAGE CONTENT-->
    <footer class="page-footer">
        <div class="font-13">2018 © <b>AdminCAST</b> - All rights reserved.</div>
