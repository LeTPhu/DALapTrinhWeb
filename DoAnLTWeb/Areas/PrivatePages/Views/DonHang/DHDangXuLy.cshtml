@{
    ViewBag.Title = "Đơn hàng chưa kích hoạt";
}
@using DoAnLTWeb.Models;
@model DoAnLTWeb.Models.DonHang
@*<style>
        .thunho {
            font-size: smaller;
        }
    </style>*@
<!-- START PAGE CONTENT-->
<div class="page-heading">
    <h1 class="page-title">
        DANH SÁCH ĐƠN HÀNG CHƯA KÍCH HOẠT
    </h1>
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="@Url.Action("Dashboard","Dashboard")"><i class="la la-home font-20"></i></a>
        </li>
    </ol>
</div>
<div class="page-content fade-in-up">
    <div class="ibox">
        <div class="ibox-body">
            <table class="table table-bordered table-hover" id="example-table" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>Đơn hàng</th>
                        <th style="width:11%">Tên khách hàng</th>
                        <th>Tài khoản</th>
                        <th style="width:10%">Ngày đặt</th>
                        <th style="width:10%">Ngày giao</th>
                        <th style="width:15%">Địa chỉ</th>
                        <th>Ghi chú GH</th>
                        <th>Trạng thái</th>
                        <th>Nhóm lệnh</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (DonHang i in DataIn.NhanDHChuaKichHoat())
                        {
                            <tr>
                                <td>@i.soDH </td>
                                <td>@i.KhachHang.tenKH</td>
                                <td>@i.TaiKhoan1.tenTV</td>
                                <td>@string.Format("{0:hh:mm dd/MM/yyyy}", i.ngayDat)</td>
                                <td>@string.Format("{0:hh:mm dd/MM/yyyy}", i.ngayGH)</td>
                                <td>@i.diaChiGH</td>
                                <td>@i.ghiChu</td>
                                <td>
                                    @using (Html.BeginForm("chiTiet", "DonHang", FormMethod.Post))
                                    {
                                        <input type="hidden" name="maDH" value=" @i.soDH" />
                                        <button class="btn-primary">Xem chi tiết</button>
                                    }
                                    @using (Html.BeginForm("Active", "DonHang", FormMethod.Post))
                                    {
                                        <input type="hidden" name="maDH" value=" @i.soDH" />
                                        <button class="btn-primary">Kích hoạt</button>
                                    }
                                    @using (Html.BeginForm("Delete", "DonHang", FormMethod.Post))
                                    {
                                        <input type="hidden" name="maDH" value=" @i.soDH" />
                                        <button class=" btn-danger">Xóa</button>
                                    }
                                </td>
                            </tr>
                        }

                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th>Đơn hàng</th>
                        <th style="width:11%">Tên khách hàng</th>
                        <th>Tài khoản</th>
                        <th style="width:10%">Ngày đặt</th>
                        <th style="width:10%">Ngày giao</th>
                        <th style="width:15%">Địa chỉ</th>
                        <th>Ghi chú GH</th>
                        <th>Trạng thái</th>
                        <th>Nhóm lệnh</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>
@*Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount

    @Html.PagedListPager(Model, page => Url.Action("DSDonHang",
        new { page }))*@
