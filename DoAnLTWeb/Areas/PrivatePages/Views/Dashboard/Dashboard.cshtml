@using DoAnLTWeb.Models;
@model DoAnLTWeb.Models.TaiKhoan
@{
    ViewBag.Title = "Dashboard";

}
<!-- START PAGE CONTENT-->
<div class="page-heading">
    <h1 class="page-title">Profile</h1>
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="@Url.Action("Dashboard", "Dashboard")"><i class="la la-home font-20"></i></a>
        </li>
        <li class="breadcrumb-item">Thông tin cá nhân</li>
    </ol>
</div>
<div class="page-content fade-in-up">
    <div class="row">
        <div class="col-lg-3 col-md-4">
            <div class="ibox">
                <div class="ibox-body text-center">
                    <div class="m-t-20">
                        <img class="img-circle" src="~/Assets/img/admin-avatar.png" />
                    </div>
                    <h5 class="font-strong m-b-10 m-t-10">@Model.tenTV</h5>
                    <div class="m-b-20 text-muted">Web Developer</div>
                    <div class="profile-social m-b-20">
                        <a href="javascript:;"><i class="fa fa-twitter"></i></a>
                        <a href="javascript:;"><i class="fa fa-facebook"></i></a>
                        <a href="javascript:;"><i class="fa fa-pinterest"></i></a>
                        <a href="javascript:;"><i class="fa fa-dribbble"></i></a>
                    </div>
                    <div>
                        <button class="btn btn-info btn-rounded m-b-5"><i class="fa fa-plus"></i> Người theo dõi</button>
                        <button class="btn btn-default btn-rounded m-b-5">Tin nhắn</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-9 col-md-8">
            <div class="ibox">
                <div class="ibox-body">
                    <ul class="nav nav-tabs tabs-line">
                        <li class="nav-item">
                            <a class="nav-link active" href="#tab-1" data-toggle="tab"><i class="ti-settings"></i> Sửa thông tin</a>
                        </li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane fade show active" id="tab-1">
                            @{ if (@ViewBag.sc != null)
                                {
                                    <p class="alert alert-success">@ViewBag.sc</p>
                                }
                                else if (@ViewBag.usc != null)
                                {
                                    <p class="alert alert-danger">@ViewBag.usc</p>}
                            }

                            @using (Html.BeginForm("Dashboard", "Dashboard", FormMethod.Post))
                            {
                                <div class="row">
                                    <div class="col-sm-6 form-group">
                                        <label>Họ đệm</label>
                                        @Html.TextBoxFor(m => m.hoDem, new { @class = "form-control", type = "text" })
                                    </div>
                                    <div class="col-sm-6 form-group">
                                        <label>Tên</label>
                                        @Html.TextBoxFor(m => m.tenTV, new { @class = "form-control", type = "text" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>Email</label>
                                    @Html.TextBoxFor(m => m.email, new { @class = "form-control", type = "text" })
                                </div>
                                <div class="form-group">
                                    <label>Password</label>
                                    @Html.TextBoxFor(m => m.matKhau, new { @class = "form-control", type = "password", placeholder = "Password" })
                                </div>
                                <div class="form-group">
                                    <label>Password Again</label>
                                    @Html.TextBox("xnmk", "", new { @class = "form-control", type = "password", placeholder = "Password again" })

                                </div>
                                @Html.HiddenFor(m => m.taiKhoan1);
                                <div class="form-group">
                                    <button class="btn btn-default" type="submit">Đổi thông tin</button>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <style>
        .profile-social a {
            font-size: 16px;
            margin: 0 10px;
            color: #999;
        }

        .profile-social a:hover {
            color: #485b6f;
        }

        .profile-stat-count {
            font-size: 22px
        }
    </style>
</div>
<!-- END PAGE CONTENT-->
<footer class="page-footer">
    <div class="font-13">2018 © <b>AdminCAST</b> - All rights reserved.</div>
    <div class="to-top"><i class="fa fa-angle-double-up"></i></div>
</footer>

